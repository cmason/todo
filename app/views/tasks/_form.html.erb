<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</p>
      </div>
      <div class="message-body">
        <ul>
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field is-grouped">
    <p class="control is-expanded">
      <%= form.text_field :title, class: "input is-large", placeholder: "What do you need to do?" %>
    </p>
    <p class="control">
      <%= link_to "Cancel", root_path, class: "button is-light is-large" %>
    </p>
    <p class="control">
      <%= form.submit class: "button is-primary is-large" %>
    </p>
  </div>
<% end %>
